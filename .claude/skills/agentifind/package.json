{
  "name": "agentifind",
  "version": "3.1.0",
  "description": "Codebase intelligence for AI agents - extracts code structure and validates code quality",
  "type": "module",
  "keywords": [
    "ai",
    "llm",
    "claude",
    "code-analysis",
    "codebase",
    "code-intelligence",
    "linting",
    "code-quality",
    "tree-sitter",
    "ast"
  ],
  "author": "Aviv Kaplan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avivkaplan/agentifind.git"
  },
  "bugs": {
    "url": "https://github.com/avivkaplan/agentifind/issues"
  },
  "homepage": "https://github.com/avivkaplan/agentifind#readme",
  "bin": {
    "agentifind": "./bin/agentifind"
  },
  "files": [
    "bin/",
    "lib/",
    "dist/",
    "src/",
    "setup-precommit.sh",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "./tests/run_tests.sh",
    "lint": "shellcheck lib/*.sh bin/agentifind setup-precommit.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "stream-json": "^1.9.1",
    "tree-sitter": "^0.22.4",
    "tree-sitter-go": "^0.23.4",
    "tree-sitter-python": "^0.23.4",
    "tree-sitter-typescript": "^0.23.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/stream-json": "^1.7.8",
    "typescript": "^5.0.0"
  }
}
